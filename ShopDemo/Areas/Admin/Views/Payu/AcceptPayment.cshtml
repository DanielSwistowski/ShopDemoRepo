@model ShopDemo.ViewModels.AdminCancelOrder
@using ShopDemo.CustomHelpers;

@{
    ViewBag.Title = "Akceptuj płatność";
}

<h2>@ViewBag.Title</h2>

<h3 class="text-danger">Czy na pewno chcesz zaakceptować płatność za wybrane zamówienie?</h3>

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.OrderId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.OrderStatus)
        </dt>

        <dd>
            @Html.GetEnumDisplayName(Model.OrderStatus)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TotalAmount)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TotalAmount)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Akceptuj" class="btn btn-success" />
        </div>
    }
</div>
