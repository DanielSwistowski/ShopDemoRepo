@model IEnumerable<ShopDemo.ViewModels.ProductAttributeViewModel>

@if (Model.Count() > 0)
{
    <table class="table table-striped">
        @foreach (var attribute in Model)
        {
            <tr>
                <td class="col-md-9">
                    @Html.DisplayFor(model => attribute.Name)
                </td>

                <td class="col-md-1">
                    <button type="button" class="btnEditAttributeValues btn btn-sm btn-warning" data-attributeid="@attribute.ProductAttributeId" data-attribute-name="@attribute.Name" data-toggle="tooltip" title="Edytuj dostępne wartości"><span class="glyphicon glyphicon-th-list"></span></button>
                </td>

                <td class="col-md-1">
                    <button type="button" class="btnEditAttribute btn btn-sm btn-warning" data-attributeid="@attribute.ProductAttributeId" data-attribute="@attribute.Name" data-toggle="tooltip" title="Edytuj nazwę"><span class="glyphicon glyphicon-edit"></span></button>
                </td>

                <td class="col-md-1">
                    <button type="button" class="btnRemoveAttribute btn btn-sm btn-danger" data-attributeid="@attribute.ProductAttributeId" data-attribute="@attribute.Name" data-toggle="tooltip" title="Usuń"><span class="glyphicon glyphicon-trash"></span></button>
                </td>
            </tr>
        }
    </table>
}
else
{
    <p>
        Brak danych
    </p>
}

<p class="form-inline">
    <input id="productAttribute" type="text" placeholder="Nowa cecha produktu" class="form-control" />
    <button type="button" id="btnAddProductAttribute" data-url="@Url.Action("AddProductAttributes", "ProductAttribute")" class="btn btn-success">Dodaj</button>
    <button type="button" id="btnAttributeSaveChanges" data-url="@Url.Action("EditProductAttribute", "ProductAttribute")" class="btn btn-success hidden">Zapisz</button>
    <button type="button" id="btnConfirmDeleteAttribute" class="btn btn-success hidden">Usuń</button>
    <button type="button" id="btnCancelEditAttribute" class="btn btn-danger hidden">Anuluj</button>
</p>