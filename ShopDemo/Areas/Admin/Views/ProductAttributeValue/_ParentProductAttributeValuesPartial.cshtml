@model IEnumerable<ShopDemo.ViewModels.ParentAttributeValueViewModel>

@if (Model != null)
{
    if (Model.Count() > 0)
    {
        <table class="table">
            <tr>
                @{
                    int counter = 0;
                    foreach (var attributeValue in Model)
                    {
                        if (counter++ % 3 == 0)
                        {
                            @:</tr><tr>
                            }
                        @:<td style="border:none">
                            <input type="checkbox" name="selectedValues"
                                   value="@attributeValue.AttributeValue"
                                   @(Html.Raw(attributeValue.IsSelected ? "checked=\"checked\"" : "")) />
                                    @attributeValue.AttributeValue
                                    @:</td>
                            }
                    @:</tr>
                }
            </table>
            <button type="button" id="btnSaveCheckboxChanges" class="btn btn-success">Dodaj</button>
    }
    else
    {
        <p>Brak danych</p>
    }
}
else
{
    <p>Brak kategorii nadrzędnej</p>
}