<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ShopDemo - panel administracyjny</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <link rel="icon" href="@Url.Content("~/Content/favicon.ico")" type="image/x-icon" />
    <link rel="shortcut icon" href="@Url.Content("~/Content/favicon.ico")" type="image/x-icon" />
</head>
<body>
    <div class="navbar navbar-default navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ShopDemo - admin", "Index", "Home", new { area = "Admin" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Produkty<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.RouteLink("Aktualna oferta", "Admin_Product_Index")</li>
                            <li>@Html.RouteLink("Promocje", "Admin_ProductsOnPromotion")</li>
                            <li>@Html.RouteLink("Wycofane ze sprzedaży", "Admin_ProductsDeletedFromOffer_Menu")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Użytkownicy", "Index", "User")</li>
                    <li>@Html.ActionLink("Zamówienia", "Index", "Order")</li>
                    <li>@Html.ActionLink("Statystyki", "Index", "Statistics")</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Opcje<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.RouteLink("Kategorie", "Admin_Categories")</li>
                            <li>@Html.RouteLink("Dostawy", "Admin_Delivery_Index")</li>
                            <li>@Html.RouteLink("Log", "Admin_Log")</li>
                            <li><a href="~/admin/hangfire-dashboard">Hangfire</a></li>
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_AdminLoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div id="alert" class="margin-top-5" style="display:none"></div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ShopDemo - panel administracyjny</p>
        </footer>
    </div>

    <input type="hidden" id="ajaxLoaderSrc" value="@Url.Content("~/Content/defaultLoader.gif")" />
    @Scripts.Render("~/bundles/bootstrap", "~/bundles/jqueryalertmanager")
    @RenderSection("scripts", required: false)
    @RenderSection("styles", required: false)
</body>
</html>

<script>
    function getFullPath(path) {
        return path.replace('~/','@Url.Content("~")');
    }
</script>