@model IEnumerable<ShopDemo.ViewModels.SearchFiltersForProductViewModel>

@{
    if (Model.Count() > 0)
    {
        foreach (var filter in Model)
        {
            switch (filter.FilterType)
            {
                case DataAccessLayer.Models.FilterType.CheckboxList:
                    <div class="attributeSearchFilter" data-attributename="@filter.Attribute">
                        <label class="control-label">@filter.Attribute</label>
                        <ul style="list-style-type:none; padding-left:0">
                            @{
                                foreach (var item in filter.AttributeValues)
                                {
                                    <li>
                                        <div class="checkbox">
                                            <label>
                                                @Html.CheckBox("selectedFilters", item.IsSelected, new { value = item.AttributeValue, data_attributename = filter.Attribute })
                                                @item.AttributeValue
                                            </label>
                                        </div>
                                    </li>
                                }
                            }
                        </ul>
                        <br />
                    </div>
                                                break;

                                            //case DataAccessLayer.Models.FilterType.List:
                                            //    break;

                                            //case DataAccessLayer.Models.FilterType.Range:
                                            //    break;
                                            default:
                                                break;
                                        }
                                    }
                                }
                                else
                                {
                                    <p></p>
                                }
}